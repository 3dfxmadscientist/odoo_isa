<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
       <!--DDT -->
        <record id="ddt_report_id_isa" model="ir.actions.report.xml">
            <field name="name">Print DDT ISA</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="model">stock.picking</field>
            <field name="report_name">ddt_isa</field>
            <field name="report_type">aeroo</field>
            <field name="tml_source">file</field>
            <field name="in_format">oo-odt</field>
            <field name="out_format" eval="ref('report_aeroo_ooo.report_mimetypes_pdf_odt')"></field>
            <field name="parser_loc">sale_report_exisa/report/ddt.py</field>
            <field name="report_rml">sale_report_exisa/report/ddt.odt</field>
            <field name="parser_state">loc</field>
        </record>
        
        <ir_set>
            <field eval="'action'" name="key"/>
            <field eval="'client_print_multi'" name="key2"/>
            <field eval="['stock.picking']" name="models"/>
            <field name="name">Print DDT ISA</field>
            <field eval="'ir.actions.report.xml,'+str(ddt_report_id_isa)" name="value"/>
            <field eval="True" name="isobject"/>
            <field eval="True" name="replace"/>
        </ir_set>

