<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>

        <!-- Project -->
        <record id="view_project_form_ext_isa" model="ir.ui.view">
            <field name="name">project.form.ext.isa</field>
            <field name="model">project.project</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="/form/notebook/page[@string='Billing']/field[@name='contact_id']" position="after">                   
                        <newline/>
                        <field name="billing_hours_project" widget="float_time" colspan="2"/>
                        <field name="hours_for_partner" widget="float_time" colspan="4"/>
                        <newline/>
                </xpath>
                <xpath expr="/form/notebook/page[@string='Billing']/field[@name='partner_id']" position="attributes">                   
                    <attribute name="required">True</attribute>
                </xpath>
                <field name="user_id" position="before">
                    <field name="category_id" colspan="2" required="1"/>
                </field>
                <field name="warn_customer" position="replace">
                    <group colspan="2" col="8">
                        <field name="billing_state" colspan="2"/>
                        <field name="billing_month" colspan="2"/>
                        <field name="billing_year" colspan="2"/>
                        <newline/>
                        <field name="billing_as400" />
                        <field name="included_package" />
                        <field name="contract" on_change="onchange_contract()"/>
                        <field name="contract_line" on_change="onchange_contract()" />
                        <field name="billing_as400_date" invisible="1" />
                        <field name="contract_mod_date" invisible="1" />
                    </group>
                </field>
                <xpath expr="/form/notebook/page[@string='Notes']" position="replace">
                        <page string="Open Notes">
                            <field colspan="4" name="description" nolabel="1"/>
                        </page>
                        <page string="Closed Notes">
                            <field name="closing_category_id" colspan="2"/>
                            <field colspan="4" name="close_description"/>
                        </page>                   
                </xpath>
            </field>
        </record>

        <record id="view_project_tree_ext_isa" model="ir.ui.view">
            <field name="name">project.tree.ext.isa</field>
            <field name="model">project.project</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <field name="planned_hours" position="before">
                    <field name="date_start" />
                </field>
                <field name="total_hours" position="replace">
                </field>
                <field name="state" position="before">
                    <field name="billing_hours_project" widget="float_time" />                    
                    <field name="billing_state" string="Bill State"/>
                    <field name="billing_month" string="Bill Month"/>
                    <field name="billing_year" string="Bill Year"/>
                </field>
            </field>
        </record>
                <!-- Project Categories -->

        <record model="ir.ui.view" id="project_category_form">
            <field name="name">project.category.form</field>
            <field name="model">project.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Category of Project Form">
                    <field name="code"/>
                    <field name="name"/>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="project_category_tree">
            <field name="name">project.category.tree</field>
            <field name="model">project.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Category of Project Tree">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="project_category_search">
            <field name="name">project.category.search</field>
            <field name="model">project.category</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Category of Project Search">
                    <field name="code"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="project_category_action">
            <field name="name">Categories</field>
            <field name="res_model">project.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="project_category_search"/>
        </record>
        <menuitem id="menu_project_config" name="Projects" parent="project.menu_definitions" sequence="0"/>
        <menuitem id="menu_project_category_action" parent="menu_project_config" action="project_category_action" />

  <!-- Project Closing Categories -->

        <record model="ir.ui.view" id="project_closing_category_form">
            <field name="name">project.closing_category.form</field>
            <field name="model">project.closing_category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Category of Closing Project Form">
                    <field name="code"/>
                    <field name="name"/>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="project_closing_category_tree">
            <field name="name">project.closing_category.tree</field>
            <field name="model">project.closing_category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Category of Closing Project Tree">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="project_closing_category_search">
            <field name="name">project.closing_category.search</field>
            <field name="model">project.closing_category</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Category of Closing Project Search">
                    <field name="code"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="project_closing_category_action">
            <field name="name">Closing Categories</field>
            <field name="res_model">project.closing_category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="project_closing_category_search"/>
        </record>
        <menuitem id="menu_project_closing_category_action" parent="menu_project_config" action="project_closing_category_action" />
    </data>
</openerp>
