            <field name="model">riba.distinta</field>
            <field name="inherit_id" ref="l10n_it_ricevute_bancarie.view_distinta_riba_form"/>
            <field name="arch" type="xml">
                <button name="cancel" position="after">
                    <button name="action_revert_done" string="Reset to Draft" attrs="{'invisible':[('state','in',('draft','cancel','paid'))]}" type="object" icon="gtk-cancel" />
