<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="account_invoice_ext_isa_form_view" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Print Invoice']" position="replace"></xpath>
                <field name='partner_bank_id' position="replace"></field>
                <xpath expr="//field[@name='account_id']" position="after">           
                    <newline/>
                    <field name="partner_bank_id" colspan="3"/>
                </xpath>
            </field>
        </record>
        
     </data>
</openerp>
