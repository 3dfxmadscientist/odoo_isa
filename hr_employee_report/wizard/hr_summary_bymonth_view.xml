<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--odt -->
        
        <record id="view_hr_employee_report_holidays_odt_month" model="ir.ui.view">
            <field name="name">Employee Summary Monthly odt</field>
            <field name="model">hr.employee.report.summary_odt.month</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Print Summary Report Monthly">
                <field name="month"/>
                <field name="year"/>
                <newline/>
                <separator colspan="4"/>
                <button special="cancel"  string="Cancel" icon='gtk-cancel'/>
                <button name="print_report" string="Print" type="object"  icon="gtk-print"/>
            </form>
            </field>
        </record>
        
        <record id="action_hr_employee_report_summary_odt_month" model="ir.actions.act_window">
            <field name="name">Employee Summary Monthly odt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.report.summary_odt.month</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <record model="ir.values" id="hr_employee_report_summary_odt_month_values">
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="object" eval="1" />
            <field name="name">Employee Summary Monthly odt</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_hr_employee_report_summary_odt_month'))" />
            <field name="key">action</field>
            <field name="model">hr.employee</field>
        </record>
        
        <!-- single employee-->
        
        <record id="view_hr_employee_report_summary_self_odt_month" model="ir.ui.view">
            <field name="name">Employee Summary Monthly odt</field>
            <field name="model">hr.employee.report.summary_self_odt.month</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Print Summary Report Monthly">
                <field name="month"/>
                <field name="year"/>
                <newline/>
                <separator colspan="4"/>
                <button special="cancel"  string="Cancel" icon='gtk-cancel'/>
                <button name="print_report" string="Print" type="object"  icon="gtk-print"/>
            </form>
            </field>
        </record>
        
        <record id="action_hr_employee_report_summary_self_odt_month" model="ir.actions.act_window">
            <field name="name">Employe Summary Monthly odt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.report.summary_self_odt.month</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem action="action_hr_employee_report_summary_self_odt_month" name="Employee Summary Monthly" id="menu_hr_employee_report_summary_self_odt_month" sequence="5" parent="hr.menu_hr_reporting" groups="base.group_extended"/>

    </data>
</openerp>
