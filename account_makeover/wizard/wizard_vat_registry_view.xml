<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_action_vat_registry_view" model="ir.ui.view">
          <field name="name">wizard.vat.registry.form</field>
          <field name="model">wizard.vat.registry</field>
          <field name="arch" type="xml">
            <form string="Vat Registry" version="7.0">
                <group>
                    <group>
                        <field name="period_id" required="1" widget="selection"/>
                    </group>
                    <group>
                        <field name="vat_register" required="1" widget="selection"/>
                    </group>
                </group>
                <footer>
                    <button name="get_print" icon="gtk-go-forward" string="View report" type="object" default_focus="1" class="oe_highlight" />
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
               
            </form>
            </field>
        </record>

    </data>
</openerp>
