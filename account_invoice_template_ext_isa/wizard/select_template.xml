<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="wizard_select_template_line_isa" model="ir.ui.view">
            <field name="name">Select Invoice Template Line</field>
            <field name="model">wizard.select.invoice.template.line</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_invoice_template.wizard_select_template_line" />
            <field name="arch" type="xml">
                <xpath expr="/form/group/field[@name='account_id']" position="after">
                    <field name="analytic_account_id" />
                    <!--field name="type_of_amount" readonly="1"/-->              
                </xpath>
                <xpath expr="/form/group/field[@name='amount']" position="replace">
                    <field name="amount" attrs="{'readonly':[('type_of_amount','=','computed')]}"/>   
                </xpath>
            </field>
        </record>

        <record id="wizard_select_template_line_tree_isa" model="ir.ui.view">
            <field name="name">Select Invoice Template Line</field>
            <field name="model">wizard.select.invoice.template.line</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account_invoice_template.wizard_select_template_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='account_id']" position="after">
                    <field name="analytic_account_id" />
                    <!--field name="type_of_amount" /-->             
                </xpath>
            </field>
        </record>      
    </data>
</openerp>



